{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block main %}


    {% for q in questions %}
        <section class="jumbotron text-center">
            <div class="container">
                <p class="lead text-muted">{{ q }}</p>
                <ol type="A">
                    {% for a in q.answers %}
                        <li {% if a.correct == true %}class="zuzena"{% endif %}>{{ a }}</li>
                    {% endfor %}
                </ol>
            </div>
        </section>
        <hr>
        <section class="text-center">
            <ul class="list-unstyled">
                <li><a href="#" class="btn btn-sm btn-secondary my-2">Erantzuna: A</a></li>
                <li><a href="#" class="btn btn-sm btn-secondary my-2">Erantzuna: B</a></li>
                <li><a href="#" class="btn btn-sm btn-secondary my-2">Erantzuna: C</a></li>
                <li><a href="#" class="btn btn-sm btn-secondary my-2">Erantzuna: D</a></li>
            </ul>
        </section>
        <section class="text-center" id="divEmaitza">

        </section>
    {% endfor %}

{% endblock %}
