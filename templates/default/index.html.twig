{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block main %}


    {% for q in questions %}
        <section class="jumbotron text-center">
            <div class="container">
                <p class="lead text-muted">{{ q }}</p>
                <ol type="A">
                    {% for a in q.answers %}
                        <li >
                            <a href="#" class="erantzuna" data-balioa="{{ a.correct }}">{{ a }}</a>
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </section>
        <hr>

        <section class="text-center" id="divEmaitza">
            <div class="divZuzena">
                <span style='font-size:100px;'>&#128526;</span>
            </div>
            <div class="divOkerra">
                <span style='font-size:100px;'>&#128534;</span>
            </div>
        </section>
    {% endfor %}

{% endblock %}
