{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block main %}


    {% for q in questions %}
        <section class="jumbotron text-center">
            <div class="container">
                <h2>{{ q }}</h2>
                <ol type="A" class="text-left">
                    {% for a in q.answers %}
                        <li >
                            <a href="#" class="erantzuna" data-balioa="{{ a.correct }}">{{ a.correct }}-{{ a }}</a>
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </section>
        <hr>
        <div class="navigation text-center">
            {{ knp_pagination_render(questions, null, {}, {
                'position': 'centered',
                'size': 'large',
                'rounded': true,
            }) }}
        </div>
        <section class="text-center" id="divEmaitza">
            <div id="divZuzena" style="display: none">
                <span class="emoZuzena" style='font-size:100px;'>&#128526;</span>
            </div>
            <div id="divOkerra" style="display: none">
                <span class="emoOkerra" style='font-size:100px;'>&#128534;</span>
            </div>
        </section>
    {% endfor %}

{% endblock %}
